<!DOCTYPE html>
<html>
<body>
<script>
    var count = window.prompt('Please enter amount of natural numbers.', 0);
    var arr = [];
    var currentNumber = 2;

    function recursion(n) {
        if (n > 0) {
            if (isNatural(currentNumber)) {
                arr.push(currentNumber);
                currentNumber++;
                return recursion(n - 1);
            }
            currentNumber++;
            return recursion(n);
        } else {
            return arr;
        }
    }

    function isNatural(number) {
        for (var i = 2; i <= number / 2; i++) {
            if (number % i === 0) {
                return false;
            }
        }
        return true;
    }
    alert(recursion(count));

</script>
</body>
</html>
